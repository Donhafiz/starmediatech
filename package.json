{
  "name": "star-media-tech-backend",
  "version": "1.0.0",
  "description": "Backend API for Star Media Tech - Fully secure, scalable, and real-time ready",
  "main": "server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && live-server --port=3000 --open=./index.html",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.19.4",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.1",
    "validator": "^13.15.23"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "verbose": true
  },
  "keywords": [
    "backend",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "socket.io",
    "star-media-tech"
  ],
  "author": "Star Media Tech",
  "license": "MIT"
}
